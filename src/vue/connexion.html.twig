{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Connexion {% endblock %}
{% block body %}
{{ parent() }}

{% if form.valide is defined %}
		{% if form.valide == true %}
			<h1>Inscription réussie</h1>
			<h1>Voici votre identifiant :
				{{form.email}}</h1>
			{% if form.role == 1 %}
				<h1>Vous êtes administrateur du site</h1>
			{% else %}
				<h1>Vous êtes un client du site
				</h1>
			
		{% endif %}
	{% else %}
		<h1>Echec de la Connexion {{form.message}}</h1>
		<h1>
			<a href="index.php?page=connexion">Retourner sur la page de Connexion</a>
		</h1>
	{% endif %}
{% else %}

<div class="container">
		<div class="row justify-content-center">

			<form action="#" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Connexion</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="exampleInputEmail1">Adresse Mail *</label>
						<input class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Entrez votre email" type="email"
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Mot de passe *</label>
						<input class="form-control" id="exampleInputPassword1" name="mdp" placeholder="Mot de passe" type="password">
					</div>
					

					<button type="submit" name="valider" class="btn btn-primary">Envoyer</button>
				</fieldset>
			</form>
		</div>
	</div>
  

  {% endif %}
{% endblock %} 