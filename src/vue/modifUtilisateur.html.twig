{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier un Utiliateur
{% endblock %}

{% block body %}
	{{parent()}}
    {% if form.utilisateur is defined %}
{% if form.utilisateur != null %}

	
	<div class="container">
		<div class="row justify-content-center">

			<form action="index.php?page=utilisateur" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Modification d'un compte</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="exampleInputEmail1">Adresse Mail *</label>
						<input class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="{{form.utilisateur.email}}" type="email">
						<small id="emailHelp" class="form-text text-muted">Nous ne partagerons pas vos informations personelles telles que votre email ou autres.</small>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Mot de passe *</label>
						<input class="form-control" id="exampleInputPassword1" name="motdepasse" placeholder="Votre mdp ici"  type="password">
					</div>
					<div class="form-group">
						<label for="exampleInputName1">Nom *</label>
						<input class="form-control" id="exampleInputname1" name="nom"  type="text" value="{{form.utilisateur.nom}}">
					</div>
					<div class="form-group">
						<label for="exampleInputfirstname1">Pr√©nom *</label>
						<input class="form-control" id="exampleInputFirstName1" name="prenom" value="{{form.utilisateur.prenom}}" type="text">
					</div>
					<div class="form-group">
						<label for="exampleInputphone1">Tel *
						</label>
						<input class="form-control" id="exampleInputphone" name="tel" type="tel" value="{{form.utilisateur.tel}}" pattern="[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}-[0-9]{2}" >
					</div>
					<div class="form-group">
						<label for="exampleRole">Role
						</label>
						<select class="form-control" name="idrole">
							
                            <option value="Client">Client</option>
                            {% if session.login is defined %}
							{% if session.role == "Administrateur" %}
                            <option value="Administrateur">Administrateur</option>
                            {% endif %}
                            {% endif %}
                                
						</select>
					</div>

					<button type="submit" name="envoyer" class="btn btn-primary">Modifier</button>
				</fieldset>
			</form>


            {% else %}
<h2 class="alert alert-danger" role="alert">{{ form.message }}</h2>
<a href="index.php?page=utilisateur">Retourner sur la liste des utilisateurs</a>
{% endif %}
{% else %}
<h2 class="alert alert-danger" role="alert">{{ form.message }}</h2>
<a href="index.php?page=utilisateur">Retourner sur la liste des utilisateurs</a>
{% endif %}
		</div>
	</div>
{% endblock %}
